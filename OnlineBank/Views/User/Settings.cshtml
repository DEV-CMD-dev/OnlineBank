@model OnlineBank.Data.Entities.User

@{
    ViewData["Title"] = "Settings";
}

<h2>Settings</h2>

<form method="post" asp-action="UpdateSettings">
    <div>
        <label>Full Name</label>
        <input type="text" name="fullName" value="@Model.FullName" maxlength="100" />
    </div>
    <div>
        <label>Phone</label>
        <input type="tel" name="phone" value="@Model.Phone" />
    </div>
    <div>
        <label>Address</label>
        <input type="text" name="address" value="@Model.Address" />
    </div>
    <button type="submit">Save Changes</button>
</form>
